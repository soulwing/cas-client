<project name="soulwing-casclient" default="dist.zip" basedir=".">
  <property name="name" value="${ant.project.name}"/>
  <property name="version" value="0.3rc4"/>
  <property name="name.version" value="${name}-${version}"/>
  <property name="doc.dir" location="doc"/>
  <property name="build.dir" location="build"/>
  <property name="build.prod.dir" location="${build.dir}/classes"/>
  <property name="build.test.dir" location="${build.dir}/test-classes"/>
  <property name="vendor.dir" location="vendor/"/>
  <property name="vendor.lib.dir" location="${vendor.dir}/lib"/>
  <property name="dist.dir" location="dist"/>
  <property name="jar.name" value="${name.version}.jar"/>
  <property name="jar.path" location="${dist.dir}/${jar.name}"/>
  <property name="zip.path" location="${dist.dir}/${name.version}.zip"/>
  <property name="javadoc.web.xml" location="resources/javadoc-web.xml"/>
  <property name="javadoc.war.path" location="${dist.dir}/casclient-docs.war"/>
  
  <target name="all" depends="dist.zip, javadoc.war"/>
  
  <target name="clean">
    <delete dir="${dist.dir}"/>
  </target>

  <target name="prepare" depends="clean">
    <mkdir dir="${doc.dir}"/>
    <mkdir dir="${dist.dir}"/>
  </target>
  
  <target name="lib.jar" depends="prepare">
    <jar destfile="${jar.path}" basedir="${build.prod.dir}"/>
  </target>
  
  <target name="dist.zip" depends="lib.jar">
    <zip destfile="${zip.path}">
      <zipfileset dir="${basedir}" prefix="${name.version}">
        <include name="README.dependencies.txt" />
        <include name="LICENSE.txt" />
      </zipfileset>
      <zipfileset dir="${dist.dir}" includes="${jar.name}"
        prefix="${name.version}" />
      <zipfileset dir="${doc.dir}" prefix="${name.version}/doc" />
      <zipfileset dir="${vendor.lib.dir}" prefix="${name.version}/lib">
        <include name="**/*.jar" />
      </zipfileset>
    </zip>
  </target>

  <target name="javadoc.war" depends="prepare">
    <war destfile="${javadoc.war.path}" basedir="${doc.dir}"
         webxml="${javadoc.web.xml}" 
         excludes="WEB-INF/web.xml, META-INF/MANIFEST.MF">
    </war>
  </target>
  
  
</project>  
